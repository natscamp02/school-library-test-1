<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/style.css">

    <title>Document</title>
</head>

<body>

    <%- include('../partials/header') %>

        <main class="min-h-screen pt-28">
            <div class="container">
                <h1 class="heading text-4xl mb-12">All Book Requests</h1>

                <table border="1">
                    <thead>
                        <tr>
                            <th>Book</th>
                            <th>Student</th>
                            <th>Date Requested</th>
                            <th>Book Available</th>
                            <th>Approved</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% requests.forEach(request=> { %>
                            <tr <%- (request.return_date && new Date(request.return_date).getTime() < Date.now())
                                ? 'style="background-color: red; color: white"' : '' %> >
                                <td>
                                    <%= request.title %>
                                </td>
                                <td>
                                    <%= request.first_name + ' ' + request.last_name %>
                                </td>
                                <td>
                                    <%= new Date(request.date_requested).toDateString() %>
                                </td>
                                <td>
                                    <%= request.available ? ' Yes' : 'No' %>
                                </td>
                                <td>
                                    <%= request.approved ? 'Yes' : 'No' %>
                                        <%= request.approved ? '(Due:' + new Date(request.return_date).toDateString()
                                            + ')' :'' %>
                                </td>

                                <td>
                                    <% if (!request.approved && request.available) { %>
                                        <a
                                            href="/requests/approve/<%= request.id %>?book=<%= request.book_id %>">Approve</a>
                                        <% } else if (request.approved) { %>
                                            <a
                                                href="/requests/remove/<%= request.id %>?book=<%= request.book_id %>">Remove</a>
                                            <% } %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>

                </table>
            </div>
        </main>

        <%- include('../partials/footer') %>

</body>

</html>